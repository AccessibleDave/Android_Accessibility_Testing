<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoApp.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasicLayoutTestingActivity"
            android:label="@string/title_BasicLayoutTesting">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SandboxActivity"
            android:label="@string/title_Sandbox" />
        <activity
            android:name=".FormControlsActivity"
            android:label="@string/title_FormControls">
            <intent-filter>
                <action android:name="package.OtherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FormControlsRadioGroupActivity"
            android:label="@string/title_FormControlsRadioGroup" />

        <activity
            android:name=".FormControlsRadioGroupSub1Activity"
            android:label="@string/title_FormControlsRadioGroupSub1"/>

    </application>

</manifest>